@model Jylan.Models.Signup
@{
    ViewBag.Title = "Tilmelding gennemført";
}
<div>
    <h2>@ViewBag.Title</h2>
    <p class="text-success">Tak for din tilmelding.</p>
    <p class="text-success">
        <span class="glyphicon glyphicon-exclamation-sign"></span>
        For at sikre din plads, anbefaler vi du betaler med det samme.
        <span class="glyphicon glyphicon-exclamation-sign"></span>
    </p>
    <p class="text-success">
        <strong>Pris: </strong>@ViewBag.EventPrice kr<br/>
        <strong>HUSK: </strong>Skriv din email som besked, så vi kan se det er dig, der har betalt.
    </p>
    <div class="panel panel-default" style="width: 70%">
        <div class="text-info">
            <b>MobilePay</b><br/> 88 88 88 88
        </div>
    </div>
    <div class="panel panel-default" style="width: 70%">
        <div class="text-info">
            <b>Bankoverførsel</b><br/>
            Reg: 1337<br/>
            Kontonr: 123456789
        </div>
    </div>
    <h3>Dine informationer:</h3>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EmailAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nick)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nick)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.HasPayed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HasPayed)
        </dd>

    </dl>
    <p class="text-success">Har du problemer eller rettelser, så kontakt os. </p>
    <p>@Html.ActionLink("Kontakt information", "Contact", "Home")</p>
</div>