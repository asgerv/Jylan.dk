<!-- #region Events -->

<section class="bg-dark" id="events">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Events</h2>
                <hr class="light">
                <p>
                    Her kan du finde information og tilmelding til det næste JYLAN.<br />
                    For at gennemse tidligere events, kan du <a href="#">klikke her.</a>
                </p>
                <br />
            </div>
            <div class="col-lg-4 text-center">
                <h3 class="section-heading wow bounceInLeft" data-wow-delay="0.5s">@Model.Name</h3>
                <hr class="light wow bounceInLeft" data-wow-delay=".8s">
                <table class="wow bounceInLeft" data-wow-delay="1.1s" style="margin: 0 auto;">
                    <tr>
                        <td style="text-align: left;">
                            <strong>Tilmeldte:</strong>
                        </td>
                        <td style="text-align: right;">
                            @if (@Model.Signups != null)
                            {
                                <span>@Model.Signups.Count()</span>
                            }
                            else
                            {
                                <span>0</span>
                            }
                            /
                            <span>@Model.MaxSignups</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: left;">
                            <strong>Pris:</strong>
                        </td>
                        <td style="text-align: right;">
                            <span>@Model.Price kr.</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: left;">
                            <strong>Start:</strong>
                        </td>
                        <td style="text-align: right;">
                            <span>@Html.DisplayFor(model => model.StartDateTime)</span>
                        </td>
                    </tr>
                    <tr>
                        <td style="text-align: left;">
                            <strong>Slut:</strong>
                        </td>
                        <td style="text-align: right;">
                            <span>@Html.DisplayFor(model => model.EndDateTime)</span>
                        </td>
                    </tr>
                </table>
                <br />
                <a href="@Url.Action("Create", "Signups")" class="btn btn-primary btn-xl wow bounceInLeft" data-wow-delay="1.5s">Tilmeld dig her</a>
                <br />
                <br />
            </div>
            <div class="col-lg-8 text-center">
                <h3 class="section-heading">Tilmeldte</h3>

                <hr class="light">
                <div class="table-responsive">
                    <table class="table" style="text-align: left;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => signupModel.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => signupModel.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => signupModel.Nick)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => signupModel.HasPayed)
                            </th>
                            <th></th>
                        </tr>
                        @if (@Model.Signups != null)
                        {
                            foreach (var item in Model.Signups)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LastName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nick)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HasPayed)
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- #endregion -->
