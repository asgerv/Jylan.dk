<!-- #region header -->

<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1>JYLAN</h1>
            <hr>
            <p>Lokalt LAN party i Lintrup - Information og tilmelding</p>
            <p class="hidden-xs">Næste LAN starter om</p>
            <div id="clock" style="font-size: 35px;"></div><br />
            <a href="#events" class="btn btn-primary btn-xl page-scroll">Se mere</a>
        </div>
    </div>
</header>
