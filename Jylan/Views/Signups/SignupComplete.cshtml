@model Jylan.Models.Signup
@{
    ViewBag.Title = "Tilmelding gennemført";
}
<div class="container body-content">
    <div>
        <h2>@ViewBag.Title</h2>
        <p>
            Tak for din tilmelding til det næste JYLAN.<br/>
            Vi glæder os til at se dig!<br/>
        </p>
        <h3>Betaling</h3>
        <p>
            For at sikre din plads, anbefaler vi du betaler med det samme.<br/>
            <strong>Pris: </strong>@ViewBag.EventPrice kr<br/>
            <strong>HUSK: </strong>Skriv din email som besked, så vi kan se det er dig, der har betalt.
        </p>
        @Html.Partial("_PaymentPartial")
        <h3>Dine informationer</h3>
        <p>Tjek venligst om dine indtastede informationer er korrekte</p>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.EmailAddress)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Nick)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nick)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt>

                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd>

                @Html.DisplayFor(model => model.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PhoneNumber)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.HasPayed)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HasPayed)
            </dd>
        </dl>
        <p>Har du spørgsmål eller rettelser, så kontakt os.</p>
        @Html.ActionLink("Tilbage til forsiden", "Index", "Home")
    </div>
</div>